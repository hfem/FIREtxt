<!doctype html>

<html>
<head>
    <title>Texting App</title>	
	<meta charset="utf-8">

    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/bootstrap-theme.css" rel="stylesheet">
    <link href="css/FIREtxt.css" rel="stylesheet">
</head>

<body>
	<h1>Texting App</h1>
  <div class="searchbar">
    <form action="#">
      <input class="searchbarField" type="text" name="Search" value="Search">
    </form> 
  </div>
  <hr>

  {{#each friends}}
    <div class="friends">
      <h2 class="friendName"><a href="/convo">{{name}}</a></h2>
      <p class="timestamp">{{timestamp}}</p>
      <p class="preview">{{preview}}</p>
    </div>
    <hr>
  {{/each}}

  <script src="js/jquery-1.11.0.js"></script>
  <script src="js/bootstrap.js"></script>
  <script src="js/friends.js"></script>
</body>
</html>
