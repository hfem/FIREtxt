</head>

<body>

  <div class="myNavbar">
    <div class="homeHeader">
      <div class="row">
        <div class="col-4">
          <img class="indexLogo" src="../images/SmartConvoLogo.png">
        </div>
        <div class="col-8">       
          <h1>SmartConvo</h1>
        </div>
      </div>
    </div>
    <div class="container searchbarPanel">
      <form action="#">
        <i class="fa fa-search searchIcon" aria-hidden="false"></i>
        <input class="searchbarField" type="text" id="search">
      </form>
    </div>
  </div>
  <div class="conversationList">
    {{#each friends}}
      <div class="container">
      {{#if ../visuals }}
        <a href="/convo-B/{{name}}#recent">
      {{else}}
        <a href="/convo-A/{{name}}#recent">
      {{/if}}

          <div class="row">
            <div class="col friendIconDiv">
              <img class="friendIcon" src={{data.icon}}></img>
            </div>
            <div class="col">
              <div class="row">
                <div class="col">
                  <p class="friendName">{{name}}</p>
                </div>
                <div class="col">
                  <p class="timestamp">{{data.timestamp}}</p>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <p class="preview">{{data.preview}}</p>
                </div>
              </div>            
            </div>
          </div>

          <hr>
          </div>
        </a>
      </div>
    {{/each}}
  </div>

  <script src="js/tether.min.js"></script>
  <script src="js/jquery-3.1.1.js"></script>
  <script src="js/jquery-ui.js"></script>
  <script src="https://use.fontawesome.com/11a76ebda9.js"></script>
  <script src="js/bootstrap.js"></script>
  <script src="js/friends.js"></script>
</body>
</html>
