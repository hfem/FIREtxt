<!doctype html>

<html>
<head>
  <title>Conversation with {{name}}</title>  
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link href="../css/jquery-ui.css" rel="stylesheet">
  <link href="../css/jquery-ui.theme.css" rel="stylesheet">
  <!-- Bootstrap CSS -->
  <link href="../css/bootstrap.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
  <link href="../css/FIREtxt.css" rel="stylesheet">
  
  <!-- Google Analytics -->
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-93265000-1', 'auto');
  ga('send', 'pageview');
  </script>

</head>
<body>

  <div class="myNavbar">
    <div class="row">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="col-3">
        <h4 class="navbar-links">
        {{#if visuals}}
          <a href="/index-B">&lt</a>
        {{else}}
          <a href="/index-A">&lt</a>
        {{/if}}
        </h4>
      </div>
      <div class="col-6">
        <p class="friendNameHeader">{{name}}</p>
      </div>
      <div class="col-3">
      </div>
    </div>
  </div>
  <div class="conversation">
    {{#each data.history}}
      <p class="dayLabel">{{day}}</p>
      {{#each conversation}}
        <div class="message {{status}}">
          <p>{{message}}</p>
        </div>
      {{/each}}
    {{/each}}
  </div> 


  <p id="recent"></p>
  {{#if visuals}}
    <div class="analyticsPane">
          <img src="../images/{{name}}-Analytics.png" width="100%">
    </div>
  {{else}}
    {{#with analytics}}
    <div class="analyticsPane">  
      <p class="stat">Total messages</p>  
      <p class="stat value">{{total}}</p>
      <p class="stat">&nbsp&nbsp&nbsp&nbspFrom you</p>  
      <p class="stat value">{{total_u}}</p>
      <p class="stat">&nbsp&nbsp&nbsp&nbspFrom {{../name}}</p>  
      <p class="stat value">{{total_f}}</p>
      <p class="stat">{{../name}}'s average response time</p>  
      <p class="stat value">{{avg_time_f}} min</p>
      <p class="stat">Your average response time</p>  
      <p class="stat value">{{avg_time_u}} min</p>
    </div>
    {{/with}}
 {{/if}}

  <script src="../js/tether.min.js"></script>
  <script src="../js/jquery-3.1.1.js"></script>
  <script src="../js/jquery-ui.js"></script>
  <script src="../js/bootstrap.js"></script>
</body>
</html>