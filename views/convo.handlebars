<!doctype html>

<html>
<head>
    <title>Conversation with {{name}}</title>  
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
   <link href="../css/FIREtxt.css" rel="stylesheet">
  </head>
  <body>

  <div class="myNavbar">
    <div class="row">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="col-3">
        <h4 class="navbar-links"><a href="/">&lt</a></h4>
      </div>
      <div class="col-6">
        <p class="friendNameHeader">{{name}}</p>
      </div>
      <div class="col-3">
      </div>
    </div>
  </div>

  <div class="conversation">
    {{#each data.history}}
      <p class="dayLabel">{{day}}</p>
      {{#each conversation}}
        <div class="message {{status}}">
          <p>{{message}}</p>
        </div>
      {{/each}}
    {{/each}}
  </div> 

  <div id="endConvo"></div>

  <div class="analyticsPane">  
    <p class="stat">Total messages</p>  
    <p class="stat value">16</p>
    <p class="stat">&nbsp&nbsp&nbsp&nbspFrom you</p>  
    <p class="stat value">8</p>
    <p class="stat">&nbsp&nbsp&nbsp&nbspFrom {{name}}</p>  
    <p class="stat value">8</p>
    <p class="stat">{{name}}'s average response time</p>  
    <p class="stat value">3 min</p>
    <p class="stat">Your average response time</p>  
    <p class="stat value">5 min</p>
  </div>

  <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
</body>
</html>